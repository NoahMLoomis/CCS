@inject ICurrentSession currentSession

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/style/flexslider/flexslider.css" />
    <link rel="stylesheet" href="~/style/lightbox/magnific-popup.css" />
    <link rel="stylesheet" href="~/style/nav.css" />
    <script src="~/style/lightbox/jquery.magnific-popup.min.js"></script>
    <script src="~/style/flexslider/jquery.flexslider.js"></script>
    <link rel="stylesheet" href="~/style/main.css" />
</head>
<body>
    <span id="top"></span>
    <div class="container-fluid container-fluid-df">
        <input type="hidden" id="loginSession" value="true">
        <div id="remove">
            <div class="container-fluid-df">
                <div class="row content">
                    <div id="topbar" class="col-sm-12 col-sm-12-topbar">
                        <ul class="remove" id="top-menu">
                            @if (currentSession.IsUserATeacher()) {
                                <li class="top-menu"><a href="~/Teacher/Index" class="dark">Home</a></li>
                                <li class="top-menu"><a href="~/Challenge/Create" class="dark">Create Challenge</a></li>
                            }
                            @if (currentSession.IsUserAStudent()) {
                                <li class="top-menu"><a href="~/Student/Index" class="dark">Home</a></li>
}
                        </ul>
                        @if (currentSession.IsAuthorized()) {
                            <div id="user-info">
                                <span>Hi @currentSession.GetFullName()</span>
                                <a class="btn-sm btn-link" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-banner content content-banner">
            <div class="col-sm-3 banner-left" id="heritage-logo-bar">
                <img src="~/images/heritage-logo.png" class="img-responsive" alt="Cégep Heritage Logo">
            </div>
            <div class="col-sm-9 banner-right">
                <img src="~/images/banner-right-1.png" alt="logo">
                <div class="branding">Coding Challenge System</div>
                @*<img src="~/images/vector-anglophone-banner.png" class=" banner-image" alt="floating banner">*@
            </div>
        </div>
        <div class="row row-overflow-hidden content">
            <div class="col-sm-12 col-sm-9-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="container-fluid container-fluid-df text-center">
        <p class="text-footer">
            325, boul. Cité des Jeunes, Gatineau, QC, Canada J8Y 6T3 | T. 819-778-2270 | F. 819-778-7364<br class="break">
            © Heritage College. All Rights Reserved. <a href="mailto:amcdonald@cegep-heritage.qc.ca" class="footer">Webmaster</a>
        </p>
        <div class="text-footer">Version 0.2.1</div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js" crossorigin="anonymous"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
