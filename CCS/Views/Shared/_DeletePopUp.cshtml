@model CCS.Models.Challenge

<div class="modal-body">
    <p id="deleteInfoParagraph">Number of students attempting the challenge: <section class="deleteInBlack">@ViewBag.StudentAttempting</section></p>
    <p>Last time the challenge was attempted: <section class="deleteInBlack">@ViewBag.LastAttempted</section></p>
    <hr />
    <p class="text-center">Are you sure you want to delete this challenge?</p>
    <div class="text-center">
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        <form asp-controller="Challenge" asp-action="Delete" id="yesOption" asp-route-id="@Model.ChallengeId">
            <input type="submit" class="btn btn-primary" value="Yes" />
        </form>
    </div>
</div>